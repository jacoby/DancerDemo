<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="[% settings.charset %]">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
  <title> [% settings.appname %] </title>
  <!-- CSS -->
  <link href="/css/bootstrap.css" rel="stylesheet">
  <!-- <link href="/css/bootstrap-theme.css" rel="stylesheet"> -->
  <link href="/css/sticky-footer.css" rel="stylesheet">
  <!-- CSS -->

</head>
<body>
<!-- HEADER -->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Dancer2 Demo</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li>
[% IF session.logged_in_user == "" %]
    <!-- NOT LOGGED IN -->
              <form action='/login' method='POST' id='login'>
                Username: <input type='text' name='username'/>
                Password: <input type='password' name='password' /> 
                <input type='hidden' name='path' value='[% path %]'/>
                <input type='submit' value='Login' />
              </form>
            </li>
    <!-- NOT LOGGED IN -->
[% ELSE %]
    <!-- LOGGED IN -->
            <li class="active"><a href="/">Home</a></li>
            <li> <a href="/artists">Artists</a></li>
            <li> <a href="/pis">PIs</a></li>
            <li> <a href="/users/[% session.user %]">
              [% session.logged_in_user %]  
              ([% session.logged_in_user_realm %])
            </a> </li>
            <li> <a href="/logout">Logout</a> </li>
            <!--
            <li><form action='/logout' method='POST'> <strong> [% session.user %] </strong> <input type='submit' value='Logout' /> </form> </li>
          -->
    <!-- LOGGED IN -->
[% END %]
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
<!-- HEADER -->

<div class="container">
[% content %]
</div>

<!-- FOOTER -->
<footer class="footer">
  <div class="container">
    <p class="text-muted">Dave Jacoby, Perl Monger</p>
  </div>
</footer>
<!-- FOOTER -->

<!-- Javascript -->
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
<!-- Javascript -->

</body>
</html>
